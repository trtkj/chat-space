= javascript_include_tag 'user'
.chat-group-form
  %h1 新規チャットグループ
  = form_for @group do |f|
    = render partial: "shared/error"
    .chat-group-form__field.clearfix
      .chat-group-form__field--left
        = f.label :name, "グループ名", class: "chat-group-form__label"
      .chat-group-form__field--right
        = f.text_field :name, class: "chat-group-form__input", placeholder: "グループ名を入力してください"
    .chat-group-form__field.clearfix
      .chat-group-form__field--left
        %label.chat-group-form__label{for: "user_search"} チャットメンバーを追加
      .chat-group-form__field--right#user-search
        %input.chat-group-form__input#user-search__input{type: "text", placeholder: "追加したいユーザー名を入力してください"}
    .chat-group-form__field.clearfix
      .chat-group-form__field--left
        = f.label :user_search, "チャットメンバー", class: "chat-group-form__label"
      .chat-group-form__field--right#user-search-result
    .chat-group-form__field.clearfix
      .chat-group-form__field--left
      .chat-group-form__field--right
        = f.submit "Save", class: "chat-group-form__action-btn", data: {disable: {with: "Save"}}
